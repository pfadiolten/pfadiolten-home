- title

.row.gap-top-1
  .col-md-6.col-md-offset-3
    - Event.detail_types.each do |detail, _|
      .col-xs-6
        .panel.panel-default.panel-link.text-center{ data: { link: url_for(action: "new_#{detail}") } }
          .panel-body
            = fa_icon(icons[detail], class: 'fa-3x')
          .panel-footer
            = t("activerecord.models.event.#{detail}.one")


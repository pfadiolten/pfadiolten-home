-# users: [User]
-# none: String

.search-list
  .row.text-center
    .col-md-4.col-md-offset-4.col-xs-6.col-xs-3
      %input{ type: 'text', placeholder: t('users.index.search_users'), class: 'form-control search-input' }
    .col-md-4.col-xs-3
      .pull-left
        - if policy(User).create?
          = link_to fa_icon('plus'), new_user_path, class: 'btn btn-primary'
  - if users.any?
    .row.gap-top-1
      %ul.rows
        - users.each do |user|
          %li.col-md-3.col-xs-4.search-element{ data: { terms: [ user.scout_name, user.first_name, user.last_name ].to_json } }
            %a{ href: user_path(user) }
              .panel.panel-default.panel-link.gap-top-1
                .panel-body.no-padding
                  %img.img.img-rounded{ src: image_path(user.avatar), width: '100%' }
                .panel-footer.text-center
                  = user.scout_name
                  = yield user if block_given?
  - else
    .alert.alert-info.text-center= none
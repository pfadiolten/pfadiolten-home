- title

- if (can_create = policy(User).create?)
  .row.mb-4
    .col-12.d-flex.justify-content-center
      - if can_create
        %a.btn.btn-primary{ href: new_user_path }
          %i.fe.fe-plus

.row.justify-content-center
  .col-md-10
    .row.row-cards.row-dock.justify-content-center
      = list_any @users, else_say: t('.no_users') do |user|
        .col-6.col-md-4.col-lg-3
          = render '/users/present', user: user
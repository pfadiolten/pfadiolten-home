.simple-calendar
  - params[:calendar] = calendar_types.month
  = render 'simple_calendar/calendar_buttons'
  .calendar-heading.gap-bottom-1
    .row
      .col-xs-4
        =# link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view
        .text-right= link_to fa_icon('chevron-circle-left', class: 'fa-2x'), calendar.url_for_previous_view
      .col-xs-4
        .text-center
          %span.calendar-title
            = t('date.month_names')[start_date.month]
            = start_date.year
      .col-xs-4
        =# link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view
        .text-left= link_to fa_icon('chevron-circle-right', class: 'fa-2x'), calendar.url_for_next_view
  %table.table.table-striped
    %thead
      %tr
        - date_range.slice(0, 7).each do |day|
          %th= t('date.abbr_day_names')[day.wday]
    %tbody
      - date_range.each_slice(7) do |week|
        %tr
          - week.each do |day|
            = content_tag :td, class: calendar.td_classes_for(day) do
              - if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block)
                - capture_haml(day, sorted_events.fetch(day, []), &block)
              - else
                - block.call day, sorted_events.fetch(day, [])

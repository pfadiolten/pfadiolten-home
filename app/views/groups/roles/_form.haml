
- url ||= group_roles_path(@group)

.row.justify-content-center
  .col-12.col-md-9.col-lg-7.col-lg-6
    = simple_form_for @role, url: url do |f|
      .row
        .col-12
          = f.input :name

      .row.text-center
        .col-12.col-md
          = f.input :can_edit_group, as: :boolean, required: false
        .col-12.col-md
          = f.input :can_edit_members, as: :boolean, required: false

      .row
        - if @role.persisted? && policy(@role).destroy?
          .col-8
            = f.submit class: 'btn btn-primary col-12'
          .col-4
            = destroy_button
        - else
          .col-12
            = f.submit class: 'btn btn-primary col-12'

- title scout_name: @member.scout_name
- subtitle_to @group, :abbreviation

.row
  .col-md-4.col-md-offset-4
    = simple_form_for @member, url: member_path(@group, @member) do |f|
      .row
        .col-xs-12
          = f.input :role_id, required: true,
                    collection: @group.roles.sorted_by_rights,
                    label_method: ->(role) { role.name }

      .row
        - if policy(@member).destroy?
          .col-xs-8
            = f.submit class: 'btn btn-primary col-xs-12'
          .col-xs-4
            = destroy_button
        - else
          .col-xs-12
            = f.submit class: 'btn btn-primary col-xs-12'
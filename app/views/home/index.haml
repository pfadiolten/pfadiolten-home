- self.tab_title = t('.title')
- content_for :container_type, 'container-fluid'

.row.justify-content-center
  .col-12.col-md-10
    .row.justify-content-lg-end
      .order-lg-2.col-12.col-lg-8.col-xl-9
        = render '/home/categories/carousel',
                 articles: @home.news

      .order-lg-1.col-12.col-lg-4.col-xl-3
        = render "/events/list",
               events: @home.events

      .order-lg-3.col-12.col-lg-8.col-xl-6
        = render '/home/categories/articles',
                 articles: @home.articles

      .order-lg-4.col-12.col-lg-8.col-xl-3
        = render '/home/categories/albums',
                 albums: @home.albums
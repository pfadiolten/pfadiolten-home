-# article: Article

.card.card--article.card--hoverable.link-parent{ data: { url: article_path(article) } }
  .card-header
    .card-title
      = article.title
  .card-body
    - if article.image?
      .col.col-xl-5.float-left.px-0.mr-2.mb-2
        %img{ src: image_path(article.image.x512) }
    %article.col
    = article.summary
  .card-footer.link-parent__ignore
    = render '/shared/created_by',
             creator:    article.author,
             created_at: article.created_at
- title

.row
  .col-md-8.col-md-offset-2
    .row
      .col-xs-12.text-center
        .btn-group
          - if policy(@articles).create?
            = link_to fa_icon('plus'), new_article_path, class: 'btn btn-primary'
    .row.gap-top-1
      .col-xs-12
        .text-center= paginate(@articles)
    .row.gap-top-1
      .col-xs-12
        - if @articles.any?
          - @articles.each do |article|
            .row
              .col-xs-12.gap-bottom-1
                = render 'item', article: article do
                  - if article.image?
                    .row.gap-bottom-1
                      .col-xs-12.text-center
                        .label.label-default{ style: 'font-size: 1.1em;' }= fa_icon('picture-o')
                  .row
                    .col-xs-12
                      .text-center= truncate(article.text, length: 300, escape: false).html_safe

        - else
          = info t('.no_articles')
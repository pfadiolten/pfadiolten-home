- title

.row
  .col-md-8.col-md-offset-2
    .row
      .col-xs-12.text-center
        .btn-group
          - if policy(@articles).create?
            = link_to fa_icon('plus'), new_article_path, class: 'btn btn-primary'
    .row.gap-top-1
      .col-xs-12
        .text-center= paginate(@articles)
    .row.gap-top-1
      .col-xs-12
        - if @articles.any? || @pinned_articles.any?
          - [[@pinned_articles, true], [@articles, false]].each do |(articles, highlight)|
            %ul.rows
              - articles.each do |article|
                %li.col-md-12.col-xs-12
                  = render 'item', article: article, highlight: highlight

        - else
          = info t('.no_articles')
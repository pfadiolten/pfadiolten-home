- title

.row.justify-content-center
  .col-12.col-md-8
    - if policy(@albums).create?
      .row.mb-4
        .col-12.d-flex.justify-content-center
          .btn-group
            = link_to new_album_path, class: 'btn btn-primary' do
              %i.fe.fe-plus

    .row
      .col-12
        - list_any @albums, else_say: t('.no_albums') do |album|
          .card.mb-2
            .card-header
              .card-title
                = album.name
              .card-options
                .tag
                  = album.images.count
                  %span.tag-addon
                    %i.fe.fe-camera
                .tag.ml-2
                  = time_ago_in_words(album.created_at)
                  %span.tag-addon
                    %i.fe.fe-clock
            .card-body.text-center
              = album.description&.html_safe
            .card-body
              .row.justify-content-center
                - album.images.first(3).each_with_index do |image, i|
                  .col-3
                    %img.img-thumbnail{ src: image_path(image.file.thumbnail), alt: "Image #{i}" }
                .col-3
                  %a.btn.btn-secondary.btn-block.d-flex.align-items-center.justify-content-center{ href: album_path(album), style: 'height: 100%' }
                    %i.fe.fe-more-horizontal

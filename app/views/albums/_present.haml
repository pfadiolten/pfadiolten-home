-# album: Album

.card.card--album.card--hoverable.link-parent{ data: { url: album_path(album) } }
  .card-header
    .card-title
      = album.name

    .card-options
      .tag
        = album.images.count
        %span.tag-addon
          = icons.images

  %ul.list-group.list-group-flush
  - if (description = album.description)
    .list-group-item.link-parent__ignore
      = description.html_safe

    .list-group-item
      = render 'gallery',
                album: album,
                limit: 6,
                disable_lightbox: true

  .card-footer
    = render '/shared/created_by',
                 created_at: album.created_at

- if false
  .card.mb-2
    .card-header
      .card-title
        = album.name
      .card-options
        .tag
          = album.images.count
          %span.tag-addon
            = icons.images
    .card-body.text-center
      = album.description&.html_safe
    .card-body
      .row.justify-content-center
        - album.images.first(3).each_with_index do |image, i|
          .col-3
            %img.img-thumbnail{ src: image_path(image.file.x128), alt: "Image #{i}" }
        .col-3
          %a.btn.btn-secondary.btn-block.d-flex.align-items-center.justify-content-center{ href: album_path(album), style: 'height: 100%' }
            = render '/shared/more'
    .card-footer.p-0
      = render '/shared/created_by',
               created_at: album.created_at